<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devmarco.linearmind.controllers.SettingsController">
   <Button alignment="CENTER" mnemonicParsing="false" onAction="#displayClockSettingsModal" style="-fx-background-color: #606060;" text="Timer" textFill="WHITE">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <graphic>
         <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../../images/icons/settings.png" />
            </image>
         </ImageView>
      </graphic>
   </Button>
   <Button alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: #606060;" text="Blocker" textFill="WHITE">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <graphic>
         <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../../images/icons/settings.png" />
            </image>
         </ImageView>
      </graphic>
   </Button>
</HBox>
