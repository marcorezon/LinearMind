<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #202124;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devmarco.linearmind.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" style="-fx-background-color: #606060; -fx-background-radius: 50%;">
      <children>
      
                <Label fx:id="title" text="Pomodoro" textFill="WHITE">
              <font>
                  <Font name="System Bold" size="25.0" />
              </font>
          </Label>
      
                <Label fx:id="timer" text="00:00" textFill="WHITE">
              <font>
                  <Font name="System Bold" size="18.0" />
              </font>
          </Label>
      
                <ButtonBar buttonMinWidth="80.0" maxWidth="-Infinity" prefHeight="40.0">
              <buttons>
                  <StackPane>
                      <Button fx:id="startButton" onAction="#onStartButtonClick" style="-fx-background-color: white; -fx-border-radius: 10%;" text="Start">
                          <font>
                              <Font name="System Bold" size="14.0" />
                          </font>
                      </Button>
                      <Button fx:id="stopButton" onAction="#onPauseButtonClick" style="-fx-background-color: white; -fx-border-radius: 10%;" text="Pause" visible="false">
                          <font>
                              <Font name="System Bold" size="14.0" />
                          </font>
                      </Button>
                      <Button fx:id="resumeButton" onAction="#onResumeButtonClick" style="-fx-background-color: white; -fx-border-radius: 10%;" text="Resume" visible="false">
                          <font>
                              <Font name="System Bold" size="14.0" />
                          </font>
                      </Button>
                      <cursor>
                          <Cursor fx:constant="HAND" />
                      </cursor>
                  </StackPane>
                  <Label fx:id="cicles" text="Cicles: 0" textFill="WHITE">
                      <font>
                          <Font name="System Bold" size="15.0" />
                      </font>
                  </Label>
              </buttons>
          </ButtonBar>
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <padding>
         <Insets bottom="50.0" left="40.0" right="40.0" top="50.0" />
      </padding>
   </VBox>
   <HBox alignment="CENTER" spacing="10.0">
      <children>
         <MenuButton alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: #606060;" text="Pomodoro" textFill="WHITE">
            <items>
               <MenuItem mnemonicParsing="false" text="Edit interval time" />
               <MenuItem mnemonicParsing="false" text="Edit time" />
            </items>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </MenuButton>
         <MenuButton mnemonicParsing="false" style="-fx-background-color: #606060;" text="Blocker" textFill="WHITE">
            <items>
               <MenuItem mnemonicParsing="false" text="Block website" />
               <MenuItem mnemonicParsing="false" text="Block application" />
            </items>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </MenuButton>
      </children>
   </HBox>
</VBox>
