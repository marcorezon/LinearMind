<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="273.0" prefWidth="325.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.devmarco.linearmind.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label fx:id="welcomeText" text="Pomodoro" />
   <Label fx:id="timer"/>
   <ButtonBar buttonMinWidth="80.0" maxWidth="-Infinity" prefHeight="40.0">
     <buttons>
       <Button fx:id="startButton" alignment="CENTER" onAction="#onStartButtonClick" text="Start"/>
       <Button fx:id="stopButton" alignment="CENTER" onAction="#onPauseButtonClick" disable="true" text="Stop"/>
       <Button fx:id="resumeButton" alignment="CENTER" onAction="#onResumeButtonClick" disable="true" text="Resume"/>
     </buttons>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </ButtonBar>
</VBox>
