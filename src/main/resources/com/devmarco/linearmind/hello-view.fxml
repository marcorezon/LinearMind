<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="273.0" prefWidth="325.0" spacing="20.0" style="-fx-background-color: #202124;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devmarco.linearmind.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Pomodoro" textFill="WHITE">
        <font>
            <Font name="System Bold" size="25.0" />
        </font>
    </Label>
    <HBox alignment="CENTER" minHeight="-Infinity" prefHeight="77.0" prefWidth="302.0">
        <children>
            <ProgressIndicator fx:id="progressBar" blendMode="ADD" progress="0.0" scaleX="1.3" scaleY="1.3" />
        </children>
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </HBox>
    <ButtonBar buttonMinWidth="80.0" maxWidth="-Infinity" prefHeight="40.0">
        <buttons>
            <StackPane>
                <Button fx:id="startButton" onAction="#onStartButtonClick" style="-fx-background-color: white; -fx-border-radius: 10%;" text="Start">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="stopButton" onAction="#onPauseButtonClick" style="-fx-background-color: white; -fx-border-radius: 10%;" text="Pause" visible="false">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="resumeButton" onAction="#onResumeButtonClick" style="-fx-background-color: white; -fx-border-radius: 10%;" text="Resume" visible="false">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </StackPane>
            <Label fx:id="clockCicles" text="Cicles: 0" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>
        </buttons>
    </ButtonBar>
</VBox>
